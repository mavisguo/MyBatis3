<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.powernode.dao.INewsLabelDao">
    <resultMap id="newsLabelMapper" type="NewsLabel">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <association property="parent" javaType="NewsLabel" select="selectNewsLabelById" column="pid"/>
    </resultMap>
    <select id="selectNewsLabelById" resultMap="newsLabelMapper">
        select id, name, pid
        from newslabel
        where id = #{id}
    </select>
</mapper>